{
    "compilerOptions": {
        "lib": ["esnext"],
        "target": "es5",
        "module": "commonjs",
        "strict": false,
        "resolveJsonModule": true,
        "allowJs": true,
        "moduleResolution": "node",
        "outDir": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "removeComments": true
    },
    "include": ["index.ts"],
    "exclude": ["node_modules"]
}
