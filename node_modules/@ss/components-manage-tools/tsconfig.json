{
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "target": "es2018",
        "module": "commonjs",
        "strict": false,
        "resolveJsonModule": true,
        "allowJs": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "removeComments": true,
        "skipLibCheck": true,
        "typeRoots": ["./shims.d.ts", "./node_modules/@types"],
        "baseUrl": "./"
    },
    "include": ["shims.d.ts", "src/**/*"],
    "exclude": ["node_modules/"]
}
