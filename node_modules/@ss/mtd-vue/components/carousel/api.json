{
  "props": [{
      "name": "initial-index",
      "desc": "初始状态索引开始",
      "type": "number",
      "optionalValue": "",
      "default": "0",
      "version": ""
    },
    {
      "name": "autoplay",
      "desc": "是否自动切换",
      "type": "boolean",
      "optionalValue": "",
      "default": "true",
      "version": ""
    },
    {
      "name": "indicator-position",
      "desc": "指示器位置, 0.4.1 开始支持 none",
      "type": "string",
      "optionalValue": ["outside", "inside", "none"],
      "default": "inside",
      "version": ""
    },
    {
      "name": "speed",
      "desc": "动画速度，单位毫秒",
      "type": "number",
      "optionalValue": "",
      "default": "600",
      "version": "0.3.5"
    },
    {
      "name": "interval",
      "desc": "自动切换的时间间隔，单位毫秒",
      "type": "number",
      "optionalValue": "",
      "default": "3000",
      "version": ""
    },
    {
      "name": "loop",
      "desc": "是否循环展示",
      "type": "boolean",
      "optionalValue": "",
      "default": "true",
      "version": ""
    },
    {
      "name": "arrow",
      "desc": "什么时候出现",
      "type": "string",
      "optionalValue": ["always", "hover", "never"],
      "default": "always",
      "version": ""
    },
    {
      "name": "direction",
      "desc": "走马灯展示的方向",
      "type": "string",
      "optionalValue": ["horizontal", "vertical"],
      "default": "horizontal",
      "version": "0.4.1"
    }
  ],
  "events": [{
    "name": "change",
    "desc": "当轮播切换时触发",
    "signature": "function (prev: number, current: number)",
    "args": ""
  }],
  "methods": [{
      "name": "prev()",
      "desc": "从当前页左移 1",
      "args": ""
    },
    {
      "name": "next()",
      "desc": "从当前页右移 1",
      "args": ""
    },
    {
      "name": "setActiveItem(index: number)",
      "desc": "跳转到指定索引页, 索引从 0 开始",
      "args": ""
    }
  ]
}
